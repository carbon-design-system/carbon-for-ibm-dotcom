{
  "lerna": "6.5.1",
  "version": "independent",
  "npmClient": "yarn",
  "npmClientArgs": ["--no-immutable"],
  "useWorkspaces": true,
  "packages": [
    "packages/web-components",
    "packages/utilities",
    "packages/react",
    "packages/eslint-*",
    "packages/services-*",
    "packages/storybook-addon-theme",
    "packages/stylelint-config-ibmdotcom",
    "packages/styles"
  ],
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/docs/**",
    "**/e2e/**",
    "**/examples/**",
    "**/*.md",
    "**/ssr-tests/**"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): publish"
    }
  }
}
