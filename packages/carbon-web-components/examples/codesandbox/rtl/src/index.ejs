<html dir="<%= dir %>">
  <head>
    <title>carbon-web-components example</title>
    <meta charset="UTF-8" />
    <style type="text/css">
      body {
        font-family: 'IBM Plex Sans', 'Helvetica Neue', Arial, sans-serif;
      }

      #app {
        width: 300px;
      }

      bx-slider,
      bx-slider-input {
        visibility: hidden;
      }

      bx-slider:defined,
      bx-slider-input:defined {
        visibility: inherit;
      }
    </style>
    <script src="dist/bundle<%= dir !== 'rtl' ? '' : '-rtl' %>.js"></script>
  </head>
  <body>
    <h1>Hello World! ðŸ‘‹</h1>
    <p>Change browser's <code>Accept-Language</code> setting to switch the UI direction.</p>
    <div id="app">
      <bx-slider
        label-text="Slider label"
        min="0"
        max="100"
        value="50"
      >
        <bx-slider-input aria-label="Slider value" type="number" value="50"></bx-slider-input>
      </bx-slider>
    </div>
  </body>
</html>
