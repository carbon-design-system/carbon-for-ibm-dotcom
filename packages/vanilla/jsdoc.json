{
  "tags": {
    "allowUnknownTags": ["category"]
  },
  "source": {
    "include": ["./src/components"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|jsdocs/|__stories__)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "encoding": "utf8",
    "destination": "jsdocs/",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "better-docs": {
      "name": "IBM.com Library Vanilla Components",
      "logo": "images/logo.png",
      "trackingCode": "tracking-code-which-will-go-to-the-HEAD",
      "navigation": [
        {
          "label": "Github",
          "href": "https://github.com/carbon-design-system/ibm-dotcom-library"
        },
        {
          "label": "Example Application",
          "href": "https://admin-bro-example-app.herokuapp.com/admin"
        }
      ]
    }
  }
}
